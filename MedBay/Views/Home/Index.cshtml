@{
    ViewBag.Title = "Home Page";
}

@model MedBay.Models.HomePageViewModel
<h2>Products</h2>
<form action="/Home/Category" method="get" id="category" class="option">
    <span>Category</span>
    <select id="catName" class="form-control" name="catName" onchange="$('#category').submit()">
        <option value="">Wszystkie</option>
        <option value="Wózki inwalidzkie">Wózki inwalidzkie</option>
        <option value="Lózka">Łóżka</option>
        <option value="Podnosniki">Podnośniki</option>
        <option value="Laski">Laski</option>
    </select>
</form>
@if (Model.Products != null)
{
    <div class="list-view">
        @foreach (var item in Model.Products)
            {
                <div class="list-item">
                    @*<span class="p-cart">@item.Category</span>*@
                    @*<span class="p-brand">@item.Price</span>*@
                    <span class="p-name">@item.Product_Name</span>
                    <span class="p-description">@item.Product_Description</span>
                    <span> <img src="~/Images/Products/@item.PictureFileName" style="width: 200px;" /></span>
                    <div class="add-to-cart">
                        @Html.ActionLink("add to cart", "AddToCart", "Home", new { id = item.ProductId}, null)
                        <span class="p-price">@String.Format("{0:c}", 1)</span>
                    </div>
                    @*<span class="p-unit">
                        @item.UnitsInStock
                        @if (item.UnitsInStock > 1)
                        {
                            <text>units</text>
                        }
                        else
                        {
                            <text>unit</text>
                        }
                    </span>*@
                </div>
            }
    </div>


}
else
{
    <div id="EmptyDataMsg" class="alert alert-info">
        <strong>Welcome!</strong> Our shop is currently empty.
    </div>
}

